<header>
    <hgroup class="clearfix"> 
         <h1><a href="#">News<span>Live</span></a></h1>
        <h2>
        Get latest news from anywhere and anytime
    </h2>
    </hgroup>
</header>

<div id="main" class="clearfix">

  <aside>
        <nav>
            <ul id="menu">
              <li><a href="#">About</a></li>
                <li><a href="#">Contact</a></li>
                <li><%= link_to 'Home page', home_index_path %></li>
                <li>
                  <% if admin? %>
                   <%= link_to 'New Category', new_category_path %><% end %></li>
                   <li><% if admin? %><%= link_to "Sign out", logout_path %><% end %></li>
                   <li><%= link_to 'Category', categories_path %></li>
                   <li><% if admin? %><%= link_to 'New Article', new_category_article_path(@category) %><% end %></li>    
                 
            </ul>
        </nav>
    </aside>




<style>
h1{
  text-align: center;
  text-decoration: underline;
  font-size: 20 px;
  color: #4c2626;

}
</style>

<h1>Articles in <%= @category.title %></h1>

<div id="content">

<article>


<table>
  <tr>
    <th>Headline</th>
    <th>Dated</th>
    <th>Content</th>
  </tr>

<% for article in @articles %>
  <tr>
    <td><%= article.headline %></td>
    <td><%= article.dated %></td>
    <td><%= truncate(article.content, :length => 80) %></td>

    <td><%= link_to 'Show', category_article_path(@category, article) %></td>
    <% if admin? %>
    <td><%= link_to 'Edit', edit_category_article_path(@category, article) %></td>
    <td><%= link_to 'Destroy', category_article_path(@category, article), :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>
</article>
</div>
</div>

